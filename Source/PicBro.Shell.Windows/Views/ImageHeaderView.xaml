                  Width="16"
                  Stretch="Uniform"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Fill="Gray" />
        </Button>
        <Menu Grid.Row="1"
              IsEnabled="{Binding EnableSearchSort}"
              Background="Transparent"
              Grid.Column="4">
